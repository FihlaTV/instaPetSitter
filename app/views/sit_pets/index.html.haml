.page-header
  = link_to new_sit_pet_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Sit pet
  %h1 Listing sit_pets

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Pet kind
        %th Breed
        %th Dog lg
        %th Dog md
        %th Dog sm
        %th Cat
        %th Other
        %th Sitter
        %th{colspan: 3}

    %tbody
      - @sit_pets.each do |sit_pet|
        %tr
          %td= sit_pet.pet_kind
          %td= sit_pet.breed
          %td= sit_pet.dog_lg
          %td= sit_pet.dog_md
          %td= sit_pet.dog_sm
          %td= sit_pet.cat
          %td= sit_pet.other
          %td= sit_pet.sitter_id
          %td
            = link_to sit_pet do
              %span.glyphicon.glyphicon-ok
          %td
            = link_to edit_sit_pet_path(sit_pet) do
              %span.glyphicon.glyphicon-pencil
          %td
            = link_to sit_pet, data: { confirm: 'Are you sure?' }, method: :delete do
              %span.glyphicon.glyphicon-remove
