
.page-header.show

  = link_to users_path, class: 'btn btn-default' do
    %button.btn.btn-large.btn-warning
    Back
  -if users_post?
    = link_to edit_user_path(@user), class: 'btn btn-primary' do
      %button.btn.btn-large.btn-success
      Edit
    = link_to (@user), :method => :delete, :data => { :confirm => 'Are you sure?' } do
      %button.btn.btn-large.btn-danger
      Delete


%dl.dl-horizontal
.container-fluid.auth
  %h2.show Sitter Profile
  .row.auth-box.show-background
    .col-sm-12.show-case
      .col-sm-6.image-profile
        .image-container.img.img-responsive
          -if @user.picture.present?
            = image_tag attachment_url(@user, :picture)
          -else
            = image_tag("dogicon.jpg", size: "250x250")
      .col-sm-6.profile
        .profile-grp
          %dt Name:
          %dd= @user.name
        .profile-grp
          %dt
          -# %dd= @user.ratings.star
          %dt Address:
          %dd= @user.address
        .profile-grp
          %dt Phone:
          %dd= @user.phone
        .profile-grp
          %dt Email:
          %dd= @user.email
        .profile-grp
          %dt About me:
          %dd= @user.about_me
        .profile-grp
          %dt Backyard:
          %dd
          -if @user.backyard == true
            Yes
          -else
            No

        .profile-grp
          %h3 Pet sitting Preferences
        .profile-grp
          %dt Pet Type:
          -# %dd=@user.sit_pets.pet_kind
        .profile-grp
          %dt Breed:
          -# %dd=@user.sit_pets.breed
        .profile-grp
          %dt Size of Dog:
          -# %dd=@user.sit_pets.size
        .profile-grp
          %dt Number of Pets:
          -# %dd=@user.sit_pets.pet_number
        .profile-grp
          %dt Preferences:
          %dd=@user.preferences
