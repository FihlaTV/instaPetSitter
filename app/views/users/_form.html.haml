= form_for @user, html: { class: "form-horizontal", role: "form" } do |f|
  -if @user.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"

      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .container.auth
    %h2.text-center
      Become A Sitter!
    .big-form.well.auth-box
      %form
        .form-group
          = f.label :profile, class:'col-sm-2 control-label'
          .col-sm-5
            = f.attachment_field :picture
        .form-group
          = f.label :name, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :name, class: 'form-control'
        .form-group
          = f.label :address, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :address, class: 'form-control'
        .form-group
          = f.label :city, class: 'col-sm-1 col-sm-offset-1 control-label'
          .col-sm-3
            = f.text_field :city, class: 'form-control'
          = f.label :state, class: 'col-sm-1 control-label'
          .col-sm-3
            = f.text_field :state, class: 'form-control'
          = f.label :zip, class: 'col-sm-1 control-label'
          .col-sm-2
            = f.text_field :zip, class: 'form-control'
        .form-group
          = f.label :phone, class: 'col-sm-2 control-label'
          .col-sm-4
            = f.text_field :phone, class: 'form-control'
          = f.label :email, class: 'col-sm-1 control-label'
          .col-sm-5
            = f.text_field :email, class: 'form-control'

        .form-group
          = f.label :backyard, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.check_box :backyard, class: 'form-control'
        .form-group
          = f.label :preferences, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_area :preferences, class: 'form-control'

      = render partial: "sit_pet", locals: {f: f}

      .form-group.button_center
        = f.submit class: 'btn btn-default form_submit_btn'
