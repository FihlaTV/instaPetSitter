!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    %meta{content: "", name: "description"}
    %meta{content: "", name: "author"}
    %title
      = InstaPetSitter

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top.jasmine{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: "#navbar"}, aria: {expanded: "false", controls: "navbar"} }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to root_path, class: "navbar-brand" do
            INSTA PAW SITTER
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav.pull-right.menu_cap
            %li.menu
              = link_to "Search", ""  # This will have two options like the cover page and lead to either
            %li
              = link_to "Sitters", sitters_path
            %li
              = link_to "Become A Sitter", new_sitter_path
            %li.menu
              = link_to "Paw Necessities", ""
            %li.menu
              = link_to "Sign up", "#"

            - if logged_in?
              %li.menu
                = link_to "SIGN OUT", logout_path
            - else

              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Signin
                  %span.caret
                    %ul#login-dp.dropdown-menu
                      %li
                        .row
                          .col-md-12
                            Login via
                            .social-buttons
                              = link_to auth_path(provider:'facebook'), class: "btn btn-fb" do
                                %i.fa.fa-facebook
                                Facebook

                            .social-buttons
                              = link_to auth_path(provider:'twitter'), class: "btn btn-tw" do
                                %i.fa.fa-twitter
                                Twitter

        / /.navbar-collapse
      / /.container-fluid


  - flash.each do |name, msg|
    = content_tag :div, class: "alert alert-#{name == :error ? "danger" : "success" } alert-dismissable", role: "alert" do
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      = msg
  = yield
