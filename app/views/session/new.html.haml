.container
  .col-md-4.col-md-offset-4.login-social
    .social-box
      .title
        %h2.text-body-logo.text-center Login or Signup
        %h2.text-body-logo.text-center via
      .login-box
        .container
          .row
            %ul.social-network.social-circle
              %li.col-md-2.col-md-offset-5
                = link_to auth_path(provider: 'facebook'), class: 'icoFacebook' do
                  %i.fa.fa-facebook
              %li.col-md-2.col-md-offset-5
                = link_to auth_path(provider: 'twitter'), class: 'icoTwitter' do
                  %i.fa.fa-twitter
